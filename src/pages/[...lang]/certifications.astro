---
import { getEntryCTM } from "@/lib/contentParser.astro";
import Base from "@/layouts/Base.astro";
import parseTomlToJson from "@/lib/utils/parseTomlToJson";
import handleDraftPage from "@/lib/utils/handleDraftPage";
import { generatePaths } from "@/lib/utils/languageParser.ts";
import CertificationsSection from "@/components/sections/CertificationsSection.astro";
import CallToAction from "@/components/sections/CallToAction.astro";

export function getStaticPaths() {
  return generatePaths();
}

const config = parseTomlToJson("./src/config/config.toml");
const { default_language } = config.settings.multilingual;
const folder = "pages";
const postIndex = await getEntryCTM(folder, "certifications", Astro.currentLocale);

const response = handleDraftPage(postIndex?.data);
if (response) return response;
---
<Base {...postIndex?.data} fitToScreen={false}>
  <CertificationsSection pagination={{ enable: true, currentPage: 1 }} />
  <CallToAction />
</Base>
