---
import { getEntryCTM } from "@/lib/contentParser.astro";
import Base from "@/layouts/Base.astro";
import handleDraftPage from "@/lib/utils/handleDraftPage";
import CallToAction from "@/components/sections/CallToAction.astro";
import { generatePaths } from "@/lib/utils/languageParser.ts";
import ProductsSection from "@/components/sections/ProductsSection.astro";
import config from "@/config/config.json";
import type { DataEntryMap } from "astro:content";

export function getStaticPaths() {
  return generatePaths();
}

const products_folder = config.settings.products_folder as keyof DataEntryMap;

const postIndex = await getEntryCTM(
  products_folder,
  "-index",
  Astro.currentLocale,
);

// Remove drafts pages in production
const response = handleDraftPage(postIndex?.data);
if (response) return response;
---

<Base {...postIndex?.data} fitToScreen={false}>
  <ProductsSection pagination={{ enable: true, currentPage: 1 }} />
  <CallToAction />
</Base>
