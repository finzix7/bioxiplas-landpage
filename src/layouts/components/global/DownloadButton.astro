---
/*
  src/components/Catalogo.astro
  Componente Astro único que replica exactamente tu ejemplo React,
  con texto giratorio alrededor del círculo y contenido centralizable.
*/

const text = " - CATÁLOGO - CATÁLOGO - CATÁLOGO";
const letters = text.split("");
const deg = 360 / letters.length;
---

<style>
  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  .spinning-text-wrapper {
    position: relative;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: grid;
    place-items: center;
    font-size: 10px;
    font-weight: bold;
    padding: 15px;
  }

  .spinning-text {
    position: absolute;
    width: 100%;
    height: 100%;
    margin: 0;
    animation: spin 15s linear infinite;
  }

  .spinning-text span {
    position: absolute;
    top: 0;
    left: 50%;
    transform-origin: 0 40px;
  }
</style>

<div
  class="fixed right-5 bottom-5 z-50 flex cursor-pointer items-center justify-center rounded-full backdrop-blur-md transition hover:scale-110 lg:right-7 lg:bottom-7 lg:scale-125">
  <a
    href="/catalogo.pdf"
    download
    aria-label="Descargar catálogo"
    target="_blank"
    class="bg-secondary/20 flex h-full w-full items-center justify-center overflow-hidden rounded-full p-1 text-white/80">
    <div class="spinning-text-wrapper bg-secondary/40">
      <div class="spinning-text">
        {
          letters.map((letra, i) => (
            <span style={`transform: rotate(${deg * i}deg);`}>{letra}</span>
          ))
        }
      </div>
      <slot>
        <p class="text-[12px]">2025</p>
      </slot>
    </div>
  </a>
</div>
